<Window x:Class="LocalizationManagerTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalizationManagerTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid VerticalAlignment="Top" Margin="0,0,0,0">
        <Menu VerticalAlignment="Top" Height="22">
            <Button Content="Import" Click="Button_Click"/>
            <Button Content="Export" Click="Button_Export"/>
            <Button Content="Add Columns" Click="Button_Click_1"/>
        </Menu>
        <DataGrid Name="dataGrid" d:ItemsSource="{d:SampleData ItemCount=1}" Margin="0,22,0,0" AutoGenerateColumns="False">
            
        </DataGrid>

    </Grid>
</Window>
